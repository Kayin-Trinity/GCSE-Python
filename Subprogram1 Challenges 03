#Subprogram1 Challenges 03

def Mario_menu():
    print("You have 4 options")
    print("1, Single player")
    print("2, 2-player")
    print("3, Online")
    print("4, Exit")
    option = int(input("Enter a value from 1-4 which corresponds to the option"))
    if option == 1:
        print("You have chosen Single player")
    elif option == 2:
        print("You have chosen 2-player")
    elif option == 3:
        print("You have chosen Online")
    else:
        print("Exiting...")

Mario_menu()
